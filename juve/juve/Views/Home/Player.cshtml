@model juve.Models.Player
@{
    ViewBag.Title = "Player";
}

<section class="player floatfix">
    <img src="~/Content/Images/juve-logo.gif" />
    <h1>@Model.FirstName @Model.LastName</h1>
    <table>
        <tr>
            <td>Numer:</td>
            <td>@Model.Number</td>
        </tr>
        <tr>
            <td>Pozycja:</td>
            <td>@Model.Position</td>
        </tr>
        <tr>
            <td>Data urodzenia:</td>
            <td>@Model.BirthDay</td>
        </tr>
        <tr>
            <td>Bramki:</td>
            <td>@Model.GoalCount</td>
        </tr>
    </table>
    @Html.ActionLink("Powrót","Squad")

</section>

